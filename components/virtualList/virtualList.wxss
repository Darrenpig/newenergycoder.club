/* components/virtualList/virtualList.wxss */
.virtual-list-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.virtual-scroll {
  width: 100%;
  height: 100%;
}

.virtual-placeholder {
  position: relative;
  width: 100%;
}

.virtual-items {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  will-change: transform;
}

.virtual-item {
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.2);
  background-color: #ffffff;
  transition: background-color 0.2s ease;
}

.virtual-item:active {
  background-color: rgba(148, 163, 184, 0.1);
}

.virtual-item:last-child {
  border-bottom: none;
}

.load-more-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid rgba(148, 163, 184, 0.2);
}

.load-more-indicator.loading {
  background-color: rgba(15, 23, 42, 0.02);
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(148, 163, 184, 0.3);
  border-top: 3rpx solid #16a34a;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

.load-more-text {
  color: #64748b;
  font-size: 28rpx;
}

.refresh-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  z-index: 10;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.8);
}

.refresh-icon {
  font-size: 32rpx;
  color: #16a34a;
  font-weight: bold;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 优化滚动性能 */
.virtual-scroll {
  -webkit-overflow-scrolling: touch;
  transform: translateZ(0);
}

.virtual-items {
  transform: translateZ(0);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .refresh-btn {
    width: 70rpx;
    height: 70rpx;
  }
  
  .refresh-icon {
    font-size: 28rpx;
  }
  
  .load-more-text {
    font-size: 26rpx;
  }
}