/* 加入页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.absolute-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-gradient-1 {
  position: absolute;
  top: -10%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(13, 148, 136, 0.2));
  filter: blur(40rpx);
  animation: pulse 3s ease-in-out infinite;
}

.bg-gradient-2 {
  position: absolute;
  bottom: -5%;
  left: -5%;
  width: 200rpx;
  height: 200r极速版;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 148, 136, 0.3), rgba(22, 163, 74, 0.2));
  filter: blur(30rpx);
  animation: pulse 4s ease-in-out infinite 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  padding: 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.1);
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* 内容滚动 */
.content-scroll {
  height: calc(100vh - 200rpx);
  padding-bottom: 120rpx;
}

/* 欢迎部分 */
.welcome-section {
  text-align: center;
  padding: 60rpx 32rpx 40rpx;
}

.welcome-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.9;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #f1f5f9;
  display: block;
  margin-bottom: 16rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: #94a3b8;
  display: block;
  line-height: 1.6;
}

/* 理由部分 */
.reasons-section {
  padding: 40rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 24rpx;
  text-align: center;
}

.reasons-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.reason-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.reason-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.reason-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.reason-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.reason-desc {
  font-size: 22rpx;
  color: #94a3b8;
  display: block;
  line-height: 1.4;
}

/* 角色部分 */
.roles-section {
  padding: 40rpx 32rpx;
}

.roles-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.role-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.role-card.active {
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.2), rgba(13, 148, 136, 0.15));
  border-color: #16a34a;
}

.role-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0极速版, 0, 0.3);
}

.role-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.role-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #f1极速版f9;
  display: block;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  color: #94a3b8;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.role-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  justify-content: center;
}

.skill-tag {
  padding: 4rpx 10rpx;
  background: rgba(22, 163, 74, 0.1);
  border: 1rpx solid rgba(22, 163, 74, 0.2);
  border-radius: 6rpx;
  font-size: 18rpx;
  color: #16a34a;
}

/* 表单部分 */
.form-section {
  padding: 40rpx 32rpx;
}

.form-container {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 32rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #f1f5f9;
}

.form-input::placeholder {
  color: #64748b;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #f1f5f9;
}

.form-textarea::placeholder {
  color: #64748b;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 极速版rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.picker-display {
  font-size: 26rpx;
  color: #f1f5f9;
}

.picker-display:empty::before {
  content: '请选择';
  color: #64748b;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  margin-top: 32rpx;
  color: #000000;
}

.submit-btn:disabled {
  opacity: 0.6;
}

/* 联系部分 */
.contact-section {
  padding: 40rpx 32rpx;
}

.contact-cards {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.contact-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
}

.contact-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.9;
}

.contact-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 4rpx;
}

.contact-desc {
  font-size: 22rpx;
  color: #94a3b8;
  display: block;
}

/* 常见问题部分 */
.faq-section {
  padding: 40rpx 32rpx;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.faq-item {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  overflow: hidden;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.faq-arrow {
  width: 20rpx;
  height: 20rpx;
  transition: transform 0.3s ease;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.faq-answer.open {
  max-height: 300rpx;
}

.faq-answer text {
  display: block;
  padding: 0 24rpx 24rpx;
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.6;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
}

.nav-item.active .nav-text {
  color: #16a34a;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #94a3b8;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  display: none;
}

.modal.show {
  display: block;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #0f172a;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: center;
}

.success-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.success-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 16rpx;
}

.success-message {
  font-size: 26rpx;
  color: #94a3b8;
  display: block;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .reasons-grid,
  .roles-grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .contact-cards {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 20rpx;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}