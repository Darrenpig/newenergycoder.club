/* 关于页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.absolute-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-gradient-1 {
  position: absolute;
  top: -10%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(13, 148, 136, 0.2));
  filter: blur(40rpx);
  animation: pulse 3s ease-in-out infinite;
}

.bg-gradient-2 {
  position: absolute;
  bottom: -5%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 148, 136, 0.3), rgba(22, 163, 74, 0.2));
  filter: blur(30rpx);
  animation: pulse 4s ease-in-out infinite 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 70rpx;
  height: 72rpx;
  display: block;
  box-sizing: border-box;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 33rpx;
  height: 35rpx;
  display: inline-block;
  box-sizing: border-box;
}

.header-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: #f1f5f9;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* 内容区域 */
.content-scroll {
  height: calc(100vh - 200rpx);
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 关于卡片 */
.about-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.about-title {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: #f1f5f9;
  display: block;
  margin-bottom: 24rpx;
  text-align: center;
}

.about-desc {
  font-size: var(--font-size-md);
  color: #94a3b8;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

/* 使命愿景 */
.mission-vision {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.mission-item {
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.mission-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.mission-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.mission-text {
  font-size: var(--font-size-sm);
  color: #94a3b8;
  display: block;
  line-height: 1.6;
}

/* 统计信息 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.stat-number {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: #16a34a;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: #94a3b8;
  display: block;
}

/* 合作伙伴 */
.partners-section {
  margin-bottom: 32rpx;
}

.partners-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.partner-card {
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.partner-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.partner-logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}

.partner-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.partner-type {
  font-size: var(--font-size-sm);
  color: #16a34a;
  display: block;
}

/* 时间线 */
.timeline-section {
  margin-bottom: 32rpx;
}

.timeline-item {
  display: flex;
  margin-bottom: 24rpx;
  position: relative;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  background: #16a34a;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  position: relative;
  top: 8rpx;
}

.timeline-dot::before {
  content: '';
  position: absolute;
  top: -24rpx;
  bottom: -24rpx;
  left: 50%;
  width: 2rpx;
  background: rgba(22, 163, 74, 0.3);
  transform: translateX(-50%);
}

.timeline-item:first-child .timeline-dot::before {
  top: 0;
}

.timeline-item:last-child .timeline-dot::before {
  bottom: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-date {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: #16a34a;
  display: block;
  margin-bottom: 8rpx;
}

.timeline-event {
  font-size: var(--font-size-md);
  color: #f1f5f9;
  display: block;
  margin-bottom: 4rpx;
}

.timeline-desc {
  font-size: var(--font-size-sm);
  color: #94a3b8;
  display: block;
  line-height: 1.4;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
}

.nav-item.active .nav-text {
  color: #16a34a;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: var(--font-size-sm);
  color: #94a3b8;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .mission-vision {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .partners-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}