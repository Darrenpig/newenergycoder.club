/* 项目页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.absolute-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-gradient-1 {
  position: absolute;
  top: -10%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(13, 148, 136, 0.2));
  filter: blur(40rpx);
  animation: pulse 3s ease-in-out infinite;
}

.bg-gradient-2 {
  position: absolute;
  bottom: -5%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 148, 136, 0.3), rgba(22, 163, 74, 0.2));
  filter: blur(30rpx);
  animation: pulse 4s ease-in-out infinite 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 70rpx;
  height: 72rpx;
  display: block;
  box-sizing: border-box;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 33rpx;
  height: 35rpx;
  display: inline-block;
  box-sizing: border-box;
}

.header-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: #f1f5f9;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* 项目分类 */
.project-categories {
  padding: 24rpx 32rpx;
  background: rgba(15, 23, 42, 0.8);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: 16rpx;
}

.category-item {
  padding: 16rpx 24rpx;
  background: rgba(30, 41, 59, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  font-size: var(--font-size-md);
  color: #94a3b8;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #16a34a, #0d9488);
  color: white;
  border-color: transparent;
}

/* 项目网格 */
.projects-grid {
  padding: 32rpx;
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

.project-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.project-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.project-cover {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.project-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: white;
}

.project-badge.active {
  background: linear-gradient(135deg, #16a34a, #0d9488);
}

.project-badge.completed {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.project-badge.planning {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.project-content {
  padding: 24rpx;
}

.project-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.project-desc {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.project-tech {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.tech-tag {
  padding: 6rpx 12rpx;
  background: rgba(22, 163, 74, 0.1);
  border: 1rpx solid rgba(22, 163, 74, 0.2);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #16a34a;
}

.tech-more {
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #94a3b8;
}

.project-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.7;
}

.meta-text {
  font-size: var(--font-size-sm);
  color: #94a3b8;
}

.project-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #16a34a, #0d9488);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #16a34a;
  font-weight: 600;
}

.project-actions {
  display: flex;
  gap: 12rpx;
}

.btn-sm {
  padding: 12rpx 20rpx;
  font-size: var(--font-size-sm);
  border-radius: 12rpx;
  flex: 1;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
