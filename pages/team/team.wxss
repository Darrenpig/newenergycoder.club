/* 团队页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.absolute-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-gradient-1 {
  position: absolute;
  top: -10%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(13, 148, 136, 0.2));
  filter: blur(40rpx);
  animation: pulse 3s ease-in-out infinite;
}

.bg-gradient-2 {
  position: absolute;
  bottom: -5%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 148, 136, 0.3), rgba(22, 163, 74, 0.2));
  filter: blur(30rpx);
  animation: pulse 4s ease-in-out infinite 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 70rpx;
  height: 72rpx;
  display: block;
  box-sizing: border-box;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 33rpx;
  height: 35rpx;
  display: inline-block;
  box-sizing: border-box;
}

.header-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: #f1f5f9;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* 团队分类 */
.team-categories {
  padding: 24rpx 32rpx;
  background: rgba(15, 23, 42, 0.8);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: 16rpx;
}

.category-item {
  padding: 16rpx 24rpx;
  background: rgba(30, 41, 59, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  font-size: var(--font-size-md);
  color: #94a3b8;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #16a34a, #0d9488);
  color: white;
  border-color: transparent;
}

/* 团队成员列表 */
.team-list {
  padding: 32rpx;
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.member-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  position: relative;
  transition: all 0.3s ease;
}

.member-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.member-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.member-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: var(--font-size-sm);
  font-weight: 600;
}

.member-badge.maintainer {
  background: linear-gradient(135deg, #16a34a, #0d9488);
  color: white;
}

.member-badge.developer {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.member-badge.designer {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
}

.member-badge.contributor {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.member-info {
  margin-bottom: 20rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.member-position {
  font-size: var(--font-size-sm);
  color: #16a34a;
  display: block;
  margin-bottom: 12rpx;
}

.member-desc {
  font-size: var(--font-size-md);
  color: #94a3b8;
  line-height: 1.4;
  display: block;
}

.member-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.skill-tag {
  padding: 6rpx 12rpx;
  background: rgba(22, 163, 74, 0.1);
  border: 1rpx solid rgba(22, 163, 74, 0.2);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #16a34a;
}

.member-stats {
  display: flex;
  gap: 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding-top: 20rpx;
}

.stat {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: #16a34a;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: #94a3b8;
  display: block;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: var(--font-size-md);
  color: #94a3b8;
  display: block;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
}

.nav-item.active .nav-text {
  color: #16a34a;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #94a3b8;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  display: none;
}

.modal.show {
  display: block;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #0f172a;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.modal-close {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
}

.modal-body {
  max-height: 60vh;
  padding: 32rpx;
}

/* 成员详情 */
.member-detail {
  text-align: center;
}

.detail-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.detail-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.detail-name {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.detail-position {
  font-size: 26rpx;
  color: #16a34a;
  display: block;
  margin-bottom: 32rpx;
}

.detail-section {
  text-align: left;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.6;
  display: block;
}

.skills-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.skill-tag.large {
  padding: 8rpx 16rpx;
  font-size: var(--font-size-sm);
}

.projects-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.project-item {
  background: rgba(30, 41, 59, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
}

.project-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.project-desc {
  font-size: var(--font-size-sm);
  color: #94a3b8;
  display: block;
}

.contact-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(30, 41, 59, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
}

.contact-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .team-list {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .modal-content {
    max-width: 600rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 32rpx;
    bottom: auto;
    top: 50%;
    transform: translate(-50%, -50%);
    max-height: 90vh;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}