/* 首页样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.absolute-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-gradient-1 {
  position: absolute;
  top: -10%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(13, 148, 136, 0.2));
  filter: blur(40rpx);
  animation: pulse 3s ease-in-out infinite;
}

.bg-gradient-2 {
  position: absolute;
  bottom: -5%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 148, 136, 0.3), rgba(22, 163, 74, 0.2));
  filter: blur(30rpx);
  animation: pulse 4s ease-in-out infinite 1s;
}

.bg-gradient-3 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.2), rgba(13, 148, 136, 0.1));
  filter: blur(20rpx);
  animation: pulse 2s ease-in-out infinite 0.5s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

.content-container {
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx 120rpx 32rpx;
}

/* 标签样式 */
.tag-container {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.glass-tag {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(22, 163, 74, 0.1);
  border: 1rpx solid rgba(22, 163, 74, 0.2);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.tag-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.tag-text {
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: #16a34a;
}

/* 主标题 */
.hero-title {
  text-align: center;
  margin-bottom: 32rpx;
}

.title-text {
  font-size: 56rpx;
  font-weight: 700;
  color: #f1f5f9;
  display: block;
}

.title-highlight {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #16a34a, #0d9488);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: block;
}

/* 描述 */
.description {
  text-align: center;
  margin-bottom: 64rpx;
  padding: 0 32rpx;
}

.description text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #94a3b8;
}

/* 功能卡片 */
.features-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
  margin-bottom: 64rpx;
}

.feature-card {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.feature-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.2), rgba(13, 148, 136, 0.1));
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx auto;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.4;
  display: block;
}

/* 行动按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 64rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.btn-ios-primary {
  background: linear-gradient(135deg, #16a34a, #0d9488);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(22, 163, 74, 0.3);
}

.btn-ios-primary:active {
  background: linear-gradient(135deg, #15803d, #0f766e);
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 6rpx rgba(22, 163, 74, 0.2);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #334155;
  color: #f1f5f9;
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: #16a34a;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 12rpx;
}

/* 统计数据 */
.stats-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  margin-bottom: 64rpx;
  padding: 32rpx;
  background: rgba(30, 41, 59, 0.5);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #16a34a;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #94a3b8;
  display: block;
}

/* 最新动态 */
.news-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.section-more {
  font-size: 24rpx;
  color: #16a34a;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.news-item {
  background: rgba(30, 41, 59, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.news-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #16a34a;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.news-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #f1f5f9;
  display: block;
  margin-bottom: 8rpx;
}

.news-date {
  font-size: 22rpx;
  color: #94a3b8;
  display: block;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #94a3b8;
}

.nav-item:active .nav-text {
  color: #16a34a;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .features-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .action-buttons {
    flex-direction: row;
    justify-content: center;
  }
  
  .btn {
    min-width: 200rpx;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}