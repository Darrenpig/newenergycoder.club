/* 优化后的背景样式 - 减少复杂动画提升性能 */

/* 基础页面容器 - 使用静态渐变替代复杂动画 */
.optimized-page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  position: relative;
  overflow-x: hidden;
}

/* 简化的背景效果 - 移除动画，使用静态装饰 */
.optimized-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  opacity: 0.6;
}

/* 静态背景装饰元素 - 不使用动画 */
.static-bg-element-1 {
  position: absolute;
  top: 10%;
  right: 10%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(22, 163, 74, 0.15) 0%, transparent 70%);
  filter: blur(30rpx);
}

.static-bg-element-2 {
  position: absolute;
  bottom: 15%;
  left: 15%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(13, 148, 136, 0.12) 0%, transparent 70%);
  filter: blur(25rpx);
}

/* 轻量级悬停效果 - 仅在必要时使用 */
.optimized-hover {
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.optimized-hover:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 优化的卡片样式 - 减少复杂效果 */
.optimized-card {
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  transition: transform 0.2s ease;
}

.optimized-card:hover {
  transform: translateY(-2rpx);
}

/* 简化的加载动画 - 使用CSS transform替代复杂动画 */
.simple-loading {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(148, 163, 184, 0.3);
  border-top: 3rpx solid #16a34a;
  border-radius: 50%;
  animation: simple-spin 1s linear infinite;
}

@keyframes simple-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 性能优化的渐变文字 - 使用静态渐变 */
.optimized-gradient-text {
  background: linear-gradient(135deg, #16a34a 0%, #0d9488 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 移除复杂的脉冲动画，使用简单的透明度变化 */
.subtle-glow {
  box-shadow: 0 0 20rpx rgba(22, 163, 74, 0.1);
}

/* 优化的毛玻璃效果 - 减少模糊半径 */
.light-glass {
  background: rgba(15, 23, 42, 0.7);
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

/* 性能友好的过渡效果 */
.smooth-transition {
  transition: transform 0.15s ease, opacity 0.15s ease;
  will-change: transform;
}

/* 减少重绘的固定定位元素 */
.optimized-fixed {
  position: fixed;
  transform: translateZ(0); /* 启用硬件加速 */
  backface-visibility: hidden; /* 减少重绘 */
}

/* 简化的导航栏样式 */
.optimized-nav {
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(8rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
  transform: translateZ(0);
}

/* 性能优化的列表项 */
.optimized-list-item {
  background-color: #ffffff;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.2);
  transition: background-color 0.15s ease;
  transform: translateZ(0);
}

.optimized-list-item:active {
  background-color: rgba(148, 163, 184, 0.05);
}

/* 媒体查询优化 - 减少在小屏幕上的复杂效果 */
@media (max-width: 750rpx) {
  .static-bg-element-1,
  .static-bg-element-2 {
    display: none; /* 在小屏幕上隐藏装饰元素 */
  }
  
  .optimized-card {
    backdrop-filter: none; /* 在小屏幕上移除毛玻璃效果 */
    background: rgba(30, 41, 59, 0.95);
  }
}

/* 深色模式优化 */
@media (prefers-color-scheme: dark) {
  .optimized-page-container {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  }
}

/* 减少动画的偏好设置支持 */
@media (prefers-reduced-motion: reduce) {
  .optimized-hover,
  .optimized-card,
  .smooth-transition {
    transition: none;
  }
  
  .simple-loading {
    animation: none;
    border: 3rpx solid #16a34a;
  }
}